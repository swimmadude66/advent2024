{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "exclude": [
    "tests/",
    "**/*.spec",
    "node_modules/"
  ]
}
